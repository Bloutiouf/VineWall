a
	color white
	
	&:hover
		color #ccc

a.button, button
	border 1px solid white
	border-radius 8px
	background transparent
	color white
	display inline-block
	font-size 16px
	padding 10px 15px
	text-decoration none
	
	&:hover
		background #333
		cursor: pointer
	
body
	background black
	color white
	font-family Arial, sans-serif
	margin 0
	overflow hidden
	padding 0
	text-align center

input
	border 1px solid white
	border-radius 8px
	background transparent
	color white
	font-size 16px
	outline none
	padding 10px 15px

video
	display inline-block

#videos
	line-height 0

.row
	margin 20px 0